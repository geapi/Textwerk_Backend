Search Term: <strong><%= params[:text] %></strong> yielded <%=@allEntries.size()%> results, showing: <%=@pubLib.size()%> 

<h3>Results</h3>
<% if findSameAuthors().size > 0 %>
<p>The following author(s) have authored more than one article in the result set:<br />
<%= findSameAuthors().join(',') %></p>
<%end %>
<% counter = 1%>
<% newRow = true -%>
<% @pubLib.each do |entry| -%>
<% if newRow %> 
<div class="grid_12 alpha omega">
<% end %>
	<div id="PM_<%= entry[:id]%>" class="grid_3 alpha pubmedResult">
		<div id="A_<%= counter %>" class="resultHeading">(<%= counter %>) 
			<span class="pubMedTitle"><%= entry[:Title]%></span> 
			<div>Publish Date: <span class="pubMedDate"><%= entry[:Date]%></span></div>
		</div>
		<div id="authorsLabel_<%= entry[:id]%>">Authors: <span id="authors_<%= entry[:id]%>" class="pubMedAuthors"><%= entry[:Authors]%></span></div> 
		<div id="PMID_<%= entry[:id]%>" class="pubmedId">PMID: <%= entry[:id]%></div>
	</div>
<% if counter.modulo(4) == 0
	newRow = true %>
</div> 
<% else 
newRow = false
end %> 
<% counter += 1%>
<% end -%>

<div class="grid_12 alpha omega">
    <% counter = 1 %>
	<%findSameAuthors().each do |author| %>
	
	<script type="text/javascript" charset="utf-8">  
		$('#searchResults2').highlight('<%= author %>', { element: 'span', className: 'highlight<%=counter-%>' });
	</script>
	<% counter+= 1%>
	<% if counter > 12
		 counter = 1
	end%>
	<% end %>
</div>