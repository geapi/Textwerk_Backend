<%@pageTitle = "PubMed data retrieval and visualization"%>  
<div class="grid_12 alpha omega">
	<h1>Real Time Access to PubMed</h1>
	<% form_remote_tag(	:before => "$('#searchResults2').hide();$('#spinner').show();",
	 					:complete => "$('#spinner').hide();$('#searchResults2').show()", 
						:url => {:action => "searchPubmed", :controller => "pubmed"},
						:with => "term='+encodeURIComponent(text)") do -%>
	<%= label_tag "Please Enter your Search Term(s)" %><br/>
	<input id="Please_Enter_your_Search_Terms" type="text" name="term"  size="40"></input><br/><br />
	<input type="submit" value="Search &rarr;"/>
	<% end -%>
	
	<%#= render(:partial => "searchResults"%>
	<br />
	<%= image_tag '/images/loading.gif', :id =>'spinner',:style => "display:none;"	%>
	<div id="searchResults2">
		
	</div>
</div>